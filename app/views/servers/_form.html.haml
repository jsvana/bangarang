= form_for @server do |f|
  - if @server.errors.any?
    .alert.alert-block.alert-error.fade.in
      = link_to raw('&times;'), '#', class: 'close', "data-dismiss" => 'alert'
      %h4.alert-heading= "#{pluralize(@server.errors.count, "error")} prohibited this server from being saved:"
      %ul
        - @server.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :hostname
    = f.text_field :hostname
  .field
    = f.label :domain
    = f.text_field :domain
  .field
    = f.label :port
    = f.text_field :port
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :is_media, 'Media Server'
    = f.check_box :is_media
  .actions
    = f.submit 'Update Server', class: 'btn btn-primary'
